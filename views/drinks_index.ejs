<!-- Setting up your index view -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GitPub</title>
</head>
<body>
    <style type="text/css">
        body{
            color:#4D4C7D;
            background-color:#06113C ;
        }
    </style>

    <h1>Welcome to gitPub</h1>

    <ul>
    <!-- drink is the index and drinks is the array -->
        <%for(let drink in drinks) { %>
        <!-- <li> (drinks[drink].name.chartAt(0).toUpperCase() + drinks[drink].name.slice(1))</li>   -->
        <li> <%=drinks[drink].name.toUpperCase()%></li>
        <li><%=drinks[drink].price %> </li> 
        <li><img src="<%=drinks[drink].image; %>" alt=""> </li>
        <% } %> 
    </ul> 
 

</body>
</html>